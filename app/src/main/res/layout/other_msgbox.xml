<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/OtcharImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/who" />

    <TextView
        android:id="@+id/OtnameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/OtcharImg"
        android:text="미리미터"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/otherMSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OtnameView"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/OtcharImg"
        android:background="@drawable/back_et_othermsgbox"
        android:maxWidth="250dp"
        android:textSize="15dp"
        android:padding="12dp"
        android:text="."
        android:textColor="@color/white" />

</RelativeLayout>

